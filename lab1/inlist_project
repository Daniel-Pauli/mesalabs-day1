&star_job
  ! see star/defaults/star_job.defaults

  ! begin with a pre-main sequence model
    create_pre_main_sequence_model = .true.
  ! reducing the number of relaxation steps to decrease computation time
    pre_ms_relax_num_steps = 100

  ! display on-screen plots
    pgstar_flag = .true.

  ! Show which isotopes are included in the model
  ! To keep computation time to a minimum, we use an unrealistically small net
    show_net_species_info = .true.

  ! Initial metal fractions of Asplund2009
    initial_zfracs = 6

  ! Whether to wait for the user to confirm before closing the run and the pgstar window(s)
    pause_before_terminate = .true.

/ ! end of star_job namelist


&eos
  ! eos options
  ! see eos/defaults/eos.defaults
/ ! end of eos namelist


&kap
  ! kap options
  ! see kap/defaults/kap.defaults
    kap_file_prefix = 'OP_a09_nans_removed_by_hand'
    kap_CO_prefix = 'a09_co'
    kap_lowT_prefix = 'lowT_fa05_a09p'

    use_Type2_opacities = .true.
    Zbase = ! Add your value here
/ ! end of kap namelist


&controls
  ! see star/defaults/controls.defaults

  ! starting specifications
    initial_mass = ! Add your value here
    initial_z = 0.014 ! Add your value here ! initial metal mass fraction

  ! when to stop
    ! stop when the center mass fraction of h1 drops below this limit
    xa_central_lower_limit_species(1) = 'h1'
    xa_central_lower_limit(1) = 1d-3

  ! wind and mass loss
    hot_wind_scheme = 'Vink'
    Vink_scaling_factor = 0.3d0 ! --> Puls, J., (2015, IAU3017 proceeding), Bjorklund et al. 2020

  ! atmosphere
    ! Basic atmospheric settings, suitable for massive stars on the main sequence
    atm_option = 'T_tau'
    atm_table = 'Eddington'
    atm_T_tau_opacity = 'varying'

  ! rotation

  ! element diffusion

  ! mlt

  ! mixing
     overshoot_scheme(1) = ! Add your scheme here
     overshoot_zone_type(1) = 'any'
     overshoot_zone_loc(1) = 'core'
     overshoot_bdy_loc(1) = 'top'
     overshoot_f(1) = ! Add your value here
     overshoot_f0(1) = ! Add your value here

     ! Conv. boundaries: Use Ledoux criterion and do premixing.
     use_Ledoux_criterion = .true.
     do_conv_premix = .true.

  ! timesteps

  ! mesh

  ! solver
     ! options for energy conservation (see MESA V, Section 3)
     energy_eqn_option = 'dedt'
     use_gold_tolerances = .true.

  ! output
    ! Keep track of the history data of every step
    history_interval = 1

/ ! end of controls namelist
